#include <iostream>

using namespace std;

int main (){
    
    double valor_usuario;
    int numero_anios;
    int opcion;
    double depreciacion;
    int suma_numero_anios;
    
    cout<<"inserte el valor del que necesita calcular su depreciacion"<<endl;
    cin>>valor_usuario;
    cout<<"inserte el numero de años"<<endl;
    cin>>numero_anios;
    
    cout<<"elija uno de los metodos de depreciacion disponibles"<<endl;
    cout<<"1. línea recta"<<endl;
    cout<<"2. suma digitos de los años"<<endl;
    cout<<"0. salir del programa"<<endl;
    
    while (true){
        cin>>opcion;
        
        switch (opcion){
            case 1: cout<<"\nlínea recta"<<endl;
            depreciacion=valor_usuario/numero_anios;
            for(int i=1; i<=numero_anios; ++i){
                cout<<i<<"\t$"<<depreciacion<<endl;
                
            }
            case 2: cout<<"\nsuma digitos de los años";
            suma_numero_anios=numero_anios*(numero_anios+1)/2;
            for(int i=1; i<=numero_anios; ++i){
                depreciacion=valor_usuario*(i/suma_numero_anios);
                cout<<i<<"\t$"<<depreciacion<<endl;
            }
            case 0: 
            cout<<"Fin del programa :)";
            break;
            
            
            
        }
        
        
    }
    return 0;
    
}
